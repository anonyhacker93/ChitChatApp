<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/custom_user_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/profile_image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:cropToPadding="true"
        android:layout_marginRight="10dp"

        ></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/custom_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display_User_Name"
        android:textSize="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:layout_marginTop="3dp"></TextView>

    <TextView
        android:id="@+id/custom_user_last_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="last seen"
        android:layout_below="@+id/custom_user_name"
        android:textSize="14dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:textStyle="bold"></TextView>
</RelativeLayout>