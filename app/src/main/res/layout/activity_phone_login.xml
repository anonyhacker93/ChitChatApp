<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <EditText
        android:id="@+id/phone_login_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:hint="Enter your phone number here..."
        android:background="@drawable/inputs"
        android:drawableStart="@drawable/phone"
        android:textSize="15sp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="17dp"
        android:padding="8dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="false"
        />

    <EditText
        android:id="@+id/input_verification_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/phone_login_input"
        android:hint="Enter your verification code here..."
        android:textSize="15sp"
        android:background="@drawable/inputs"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="1dp"
        android:padding="8dp"
        android:drawableStart="@drawable/password"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/send_ver_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Send Verification Code"
        android:textSize="15sp"
        android:layout_below="@+id/input_verification_code"
        android:layout_marginTop="1dp"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:padding="8dp"
        android:background="@drawable/buttons"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Verify"
        android:textSize="15sp"
        android:layout_below="@+id/send_ver_code_button"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:padding="8dp"
        android:background="@drawable/buttons"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="invisible"/>

</RelativeLayout>